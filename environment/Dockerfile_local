# Builder stage with full TensorFlow for compatibility
# FROM tensorflow/tensorflow:2.15.0-gpu as builder
FROM nvidia/cuda:12.9.1-cudnn-runtime-ubuntu22.04 as builder

ARG DEBIAN_FRONTEND=noninteractive
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Install only essential system dependencies and Python 3.10
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        wget \
        git \
        software-properties-common \
        gnupg2 \
        curl \
        lsb-release \
        nvidia-container-toolkit \
        nvidia-utils-535 \
        && \
    gpg --keyserver keyserver.ubuntu.com --recv-keys BA6932366A755776 && \
    gpg --export --armor BA6932366A755776 > /etc/apt/trusted.gpg.d/deadsnakes.asc && \
    echo "deb http://ppa.launchpad.net/deadsnakes/ppa/ubuntu $(lsb_release -cs) main" \
    > /etc/apt/sources.list.d/deadsnakes.list && \
    apt-get update

RUN apt-get install -y --no-install-recommends \
        python3.10 \
        python3.10-venv \
        python3.10-dev && \
    rm -rf /var/lib/apt/lists/*

# Create virtual environment with Python 3.10
RUN python3.10 -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Install Python dependencies with aggressive cleanup
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir \
        numpy==1.26.4 \
        scikit-image==0.22.0 \
        matplotlib==3.8.2 \
        scipy==1.15.2 \
        "nvidia-cuda-runtime-cu12==12.9.*" \
        cupy-cuda12x==13.4.1 \
        neuroglancer==2.40.1 \
        aind-data-schema==1.2.0 \
        pathos==0.3.4 \
        git+https://github.com/AllenNeuralDynamics/aind-large-scale-prediction.git@unpinned-versions

# Runtime stage with minimal CUDA
FROM nvidia/cuda:12.9.1-cudnn-runtime-ubuntu22.04

LABEL maintainer="Camilo Laiton <camilo.laiton@alleninstitute.org>" \
    org.opencontainers.image.title="Image Cell Proposals" \
    org.opencontainers.image.description="Container for identification of cell proposals" \
    org.opencontainers.image.version="1.0.0" \
    org.opencontainers.image.licenses="MIT"

ARG DEBIAN_FRONTEND=noninteractive
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV TZ=UTC

# Install Python 3.10
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        software-properties-common \
        ca-certificates \
        && \
    add-apt-repository ppa:deadsnakes/ppa && \
    apt-get update && \
    apt-get install -y --no-install-recommends \
        python3.10 \
        python3.10-venv \
        python3.10-distutils \
        libgomp1 \
        git \
        && \
    rm -rf /var/lib/apt/lists/*

# Copy only the built virtual environment from builder
COPY --from=builder /opt/venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"
ENV CUDA_PATH=/usr/local/cuda-12.9
ENV LD_LIBRARY_PATH=$CUDA_PATH/lib64:$LD_LIBRARY_PATH

# Set environment variables for TensorFlow GPU
ENV TF_FORCE_GPU_ALLOW_GROWTH=true

RUN python3.10 -c "import cupy as cp; print(f'CuPy version: {cp.__version__}'); print(f'CUDA Runtime: {cp.cuda.runtime.runtimeGetVersion()}')"

# Set working directory
WORKDIR /app

# Default command
CMD ["bash"]